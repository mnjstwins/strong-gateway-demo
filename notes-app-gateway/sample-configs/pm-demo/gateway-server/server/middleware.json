{
  "initial:before": {
    "loopback#favicon": {
    },
    "cors": {
    },
    "strong-express-metrics": {
    }
  },
  "initial": {
    "compression": {
      "params": {
        "threshold": "4kb"
      }
    }
  },
  "session": {
    "express-session": {
      "params": {
        "saveUninitialized": true,
        "resave": true,
        "secret": "keyboard cat"
      }
    }
  },
  "auth": {
    "loopback-component-oauth2#authenticate": {
      "paths": [
        "/_internal",
        "/protected",
        "/api",
        "/me"
      ],
      "params": {
        "session": false,
        "scopes": {
          "demo": [
            "/me", "/protected", "/_internal", "/api/notes"
          ],
          "note": [
            {
              "methods": "all",
              "path": "/api/notes"
            }
          ]
        }
      }
    }
  },
  "routes:before": {
    "./middleware/https-redirect": {
      "params": {
        "httpsPort": 3101
      }
    }
  },
  "routes:after": {
    "./middleware/rate-limiting-policy": {
      "paths": ["/api", "/protected"],
      "params": {
        "limit": 100,
        "interval": 60000,
        "keys": {
          "app": {
            "template": "app-${app.id}",
            "limit": 1000
          },
          "ip": 500,
          "url": {
            "template": "url-${urlPaths[0]}/${urlPaths[1]}",
            "limit": 1000
          },
          "user": {
            "template": "user-${user.id}",
            "limit": 1000
          },
          "app,user": {
            "template": "app-${app.id}-user-${user.id}",
            "limit": 1000
          }
        }
      }
    },
    "./middleware/proxy": {
      "params": {
        "rules": [
          "^/api/(.*)$ http://localhost:3002/api/$1 [P]"
        ]
      }
    }
  },
  "files": {
    "loopback#static": [
      {
        "params": "$!../client/public",
        "paths": ["/"]
      }
    ]
  },
  "final": {
    "loopback#url-not-found": {}
  },
  "final:after": {
    "errorhandler": {"params": {"log": false}}
  }
}
